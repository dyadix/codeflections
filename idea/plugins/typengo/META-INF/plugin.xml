<idea-plugin version="2">
  <id>com.wordpress.codeflections.typengo</id>
  <name>Type&amp;Go</name>
  <version>%VERSION%</version>
  <vendor email="codeflections@gmail.com " url="http://codeflections.wordpress.com">Rustam V.</vendor>

  <description>Replaces shortcuts with mnemonics. The only shortcut to remember is Type&amp;Go dialog invocation: Ctrl+\</description>

  <change-notes><![CDATA[
      Initial versoin
      ]]>
  </change-notes>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
      <action id="TypeAndGoInvoke"
              class="codeflections.typengo.TypeAndGoInvokeAction"
              text="Type&amp;Go Mnemonics"
              description="Type an abbreviation to invoke an action">
          <add-to-group group-id="EditorPopupMenu" anchor="last"/>
          <keyboard-shortcut keymap="$default" first-keystroke="control BACK_SLASH"/>
      </action>>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>
</idea-plugin>